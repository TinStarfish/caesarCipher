<Window x:Class="caesarCipher.encryptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:caesarCipher"
        mc:Ignorable="d"
        Title="encryptWindow" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="title" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="169"><Run Text="Caesar Cipher: Encrypt"/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="unencryptedData" HorizontalAlignment="Left" Margin="28,39,0,0" TextWrapping="Wrap" Text="(user inputted text)" VerticalAlignment="Top" Height="19" Width="254"/>
        <TextBlock x:Name="equals" HorizontalAlignment="Left" Margin="41,63,0,0" TextWrapping="Wrap" Text="equals:" VerticalAlignment="Top" Height="19" Width="107"/>
        <TextBlock x:Name="encryptedData_Copy" HorizontalAlignment="Left" Margin="28,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="19" Width="254"><Run Text="(user inputted text encrypted)"/><LineBreak/><Run/></TextBlock>
        <Button x:Name="homeButton" Content="Return Home" HorizontalAlignment="Left" Margin="71,207,0,0" VerticalAlignment="Top" Width="108" Click="homeButton_Click"/>

    </Grid>
</Window>
